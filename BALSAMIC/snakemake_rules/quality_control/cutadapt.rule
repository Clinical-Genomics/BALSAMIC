from BALSAMIC.tools import get_result_dir, get_conda_env

cutadapt_dir = get_result_dir(config) + "/cutadapt/"

# remove adapter from paired end reads
rule cutadapt:
  input:
    read1=config["analysis"]["fastq_path"] + "{sample}" + "_1.fastq.gz",
    read2=config["analysis"]["fastq_path"] + "{sample}" + "_2.fastq.gz",
  output:
    read1 = cutadapt_dir + "{sample}_1.ca.fastq.gz",
    read2 = cutadapt_dir + "{sample}_2.ca.fastq.gz",
    read1_short = cutadapt_dir + "{sample}_1.ca.short.fastq.gz",
    read2_short = cutadapt_dir + "{sample}_2.ca.short.fastq.gz"
  params:
    lambda wildcards: config["analysis"]["fastq_path"] + config["samples"][wildcards.sample]["file_prefix"], 
    adapter = config["QC"]["adapter"],
    min_seq_length = config["QC"]["min_seq_length"],
    conda = get_conda_env(config["conda_env_yaml"],"cutadapt")
  threads: 4
  shell:
    "source activate {params.conda}; "
    "cutadapt "
            "-b {params.adapter} -B {params.adapter} "
            "--minimum-length {params.min_seq_length} "
            "--too-short-output {output.read1_short} "
            "--too-short-paired-output {output.read2_short} "
            "-o {output.read1} "
            "-p {output.read2} "
            "{input.read1} {input.read2}; "
    "source deactivate;"
