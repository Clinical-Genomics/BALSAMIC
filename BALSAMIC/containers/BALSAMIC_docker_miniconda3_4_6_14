FROM centos:7.6.1810
MAINTAINER Conda Development Team <conda@continuum.io>

RUN yum -y update \
    && yum -y wget bzip2 graphviz git gcc fontconfig \
    && wget https://repo.continuum.io/miniconda/Miniconda3-4.6.14-Linux-x86_64.sh -O ~/miniconda.sh \
    && bash ~/miniconda.sh -b -p /usr/local/miniconda \
    && rm -rf ~/miniconda.sh \
    && conda clean --all --yes \
    && yum clean all
