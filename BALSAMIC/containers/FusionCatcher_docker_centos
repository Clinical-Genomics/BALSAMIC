FROM hassanf/miniconda2_4.6.14:latest

MAINTAINER Hassan Foroughi hassan.foroughi@scilifelab.se 

LABEL Description="This image is used to run FusionCatcher" Version="1.10"

RUN yum clean all \
    && yum -y update \
    && yum -y groupinstall "Development Tools" \
    && yum install -y \
    automake \
    bzip2 \
    cmake \
    curl \
    gawk \
    gcc \
    gzip  \
    ncurses \
    ncurses-devel \
    make \
    parallel \
    pigz \
    tar \
    unzip \
    wget \
    default-jdk \
    python-numpy \
    python-devel \
    zlib-devel \
    python-biopython \
    libtbb-dev \
    && yum clean all \
    && wget --no-check-certificate http://sf.net/projects/fusioncatcher/files/bootstrap.py -O bootstrap.py \
    && python bootstrap.py -t --download -y -i /opt/fusioncatcher/v1.10/

WORKDIR /opt
