FROM centos:7.6.1810 

MAINTAINER Hassan Foroughi hassan.foroughi@scilifelab.se 

LABEL Description="This image is used to run FusionCatcher" Version="1.10"

RUN yum clean all \
    && yum -y update \
    && yum install -y \
    automake \
    build-essential \
    bzip2 \
    cmake \
    curl \
    g++ \
    gawk \
    gcc \
    gzip  \
    libc6-dev \
    libncurses5-dev \
    libtbb2 \
    libtbb-dev \
    make \
    parallel \
    pigz \
    python \
    python-dev \
    python-biopython \
    python-numpy \
    python-openpyxl \
    python-xlrd \
    tar \
    unzip \
    wget \
    zip \
    zlib1g \
    zlib1g-dev \
    zlibc \
    default-jdk \
    && yum clean all \
    && wget --no-check-certificate http://sf.net/projects/fusioncatcher/files/bootstrap.py -O bootstrap.py \
    && python bootstrap.py -t --download -y -i /opt/fusioncatcher/v1.10/

WORKDIR /opt
